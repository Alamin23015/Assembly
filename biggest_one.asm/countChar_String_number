.model small
.stack 100h
.data 
count db 0  
msg db 13,10,'Count : $'
.code
main proc
    mov ax, @data
    mov ds, ax

   read_loop:
   mov ah,1
   int 21h
   cmp al,13  ;press enter key
   je done 
   cmp al,32  ;press space key
   je done
   inc count
   jmp read_loop
   
   done: 
   lea dx,msg
   mov ah,9
   int 21h
   
   mov al,count
   add al,48
   mov dl, al 
   mov ah,2
   int 21h

    mov ah, 4ch
    int 21h
main endp
end main
